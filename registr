using System;
using System.Collections.Generic;
using System.IO;
using System.Windows.Forms;

namespace WinFormsApp1
{
    public partial class Form1 : Form
    {
        public static string nickname = ""; // hazırki istifadəçi
        public Form1()
        {
            InitializeComponent();
        }

        private void buttonRegister_Click(object sender, EventArgs e)
        {
            string username = textBoxUsername.Text.Trim();
            string password = textBoxPassword.Text.Trim();

            if (username == "" || password == "")
            {
                MessageBox.Show("Hər iki sahəni doldurun!");
                return;
            }

            string usersFile = "users.txt";
            // Fayl yoxdursa yarat
            if (!File.Exists(usersFile))
                File.Create(usersFile).Close();

            // Yoxla user artıq var?
            string[] users = File.ReadAllLines(usersFile);
            foreach (string line in users)
            {
                if (line.Split(';')[0] == username)
                {
                    MessageBox.Show("User artıq mövcuddur!");
                    return;
                }
            }

            // User əlavə et
            File.AppendAllText(usersFile, username + ";" + password + Environment.NewLine);
            MessageBox.Show("Qeydiyyat uğurlu oldu!");
            textBoxUsername.Text = "";
            textBoxPassword.Text = "";
        }

        private void labelLogin_Click(object sender, EventArgs e)
        {
            Form2 loginForm = new Form2();
            loginForm.Show();
            this.Hide();
        }
    }
}
